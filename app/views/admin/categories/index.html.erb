<section class="content-header">
<h1>
  <%= t(:categories) %>
</h1>
</section>

<section class="content">
  <%= display_notice notice %>
	<div class="row">
		<div class="col-md-12">
			<div class="box">
				<div class="box-header">
          <h3 class="box-title"><%= t(:categories) %></h3>

					<div class="box-tools">
						<%= paginate @categories %>
					</div>
				</div><!-- /.box-header -->
				<div class="box-body no-padding">
					<table class="table">
						<thead>
							<tr>
                <th><%= t(:name) %></th>
                <th><%= t(:description) %></th>
                <th><%= t(:is_public) %></th>
                <th><%= t(:is_active) %></th>
                <th><%= t(:is_initial) %></th>
                <th><%= t(:variety) %></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @categories.each do |category| %>
								<tr>
									<td><%= category.name %></td>
									<td><%= category.description %></td>
									<td><%= bool(category.is_public) %></td>
									<td><%= bool(category.is_active) %></td>
									<td><%= bool(category.is_initial) %></td>
									<td><%= category.variety %></td>
									

									<td width="210px">
										
										<div class="btn-group">
                      <%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_category_path(category), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_category_path(category), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_category_path(category), method: :delete, data: { confirm: t('are_you_sure?') }, class: 'btn btn-danger' %>
										</div></td>
										
								</tr>
							<% end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

<%= display_button_bar(@categories, [:admin]) %>

</section>
