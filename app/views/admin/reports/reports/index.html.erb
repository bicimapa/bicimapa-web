<section class="content-header">
<h1>
  <%= t(:reports) %>
</h1>
</section>

<section class="content">
  <%= display_notice notice %>
	<div class="row">
		<div class="col-md-12">
			<div class="box">
				<div class="box-header">
          <h3 class="box-title"><%= t(:reports) %></h3>
				</div><!-- /.box-header -->
				<div class="box-body no-padding">
					<table class="table">
						<thead>
							<tr>
                <th><%= t(:description) %></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @reports_reports.each do |report| %>
								<tr>
									<td><%= report.description %></td>

                  <td width="210px">
                    <div class="btn-group">
                      <%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_reports_report_path(report), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_reports_report_path(report), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_reports_report_path(report), method: :delete, data: { confirm: t('are_you_sure?') }, class: 'btn btn-danger' %>
                    </div>
                  </td>
										
								</tr>
							<% end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

<%= display_button_bar(@reports_reports, [:admin]) %>

</section>
