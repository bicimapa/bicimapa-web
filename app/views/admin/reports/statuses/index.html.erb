<section class="content-header">
<h1>
  <%= t(:statuses) %>
</h1>
</section>

<section class="content">
  <%= display_notice notice %>
	<div class="row">
		<div class="col-md-12">
			<div class="box">
				<div class="box-header">
          <h3 class="box-title"><%= t(:statuses) %></h3>
				</div><!-- /.box-header -->
				<div class="box-body no-padding">
					<table class="table">
						<thead>
							<tr>
                <th><%= t(:code) %></th>
                <th><%= t(:label) %></th>
                <th><%= t(:description) %></th>
                <th><%= t(:is_final_state) %></th>
                <th><%= t(:fa_icon) %></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @reports_statuses.each do |status| %>
								<tr>
									<td><%= status.code %></td>
									<td><%= status.label %></td>
									<td><%= status.description %></td>
									<td><%= bool(status.is_final_state) %></td>
                  <td><%= status.fa_icon %> <i class="fa <%= status.fa_icon %>"></i></td>

                  <td width="210px">
                    <div class="btn-group">
                      <%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_reports_status_path(status), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_reports_status_path(status), class: 'btn btn-default' %>
                      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_reports_status_path(status), method: :delete, data: { confirm: t('are_you_sure?') }, class: 'btn btn-danger' %>
                    </div>
                  </td>
										
								</tr>
							<% end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->

<%= display_button_bar(@reports_statuses, [:admin]) %>

</section>
