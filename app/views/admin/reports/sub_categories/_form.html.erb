<div class="row">
<%= simple_form_for([:admin, sub_category]) do |f| %>
  <% if sub_category.errors.any? %>
  <div class="col-md-12">
      <div class="callout callout-danger">
        <%= pluralize(sub_category.errors.count, "error") %> prohibited this sub category from being saved
      </div>
  </div>
  <% end %>
  <div class="col-md-6">
    <!-- Default box -->
    <div class="box">
      <div class="box-body">
        <div class="form-group <%= "has-error" if sub_category.errors[:name].any? %>">
          <%= f.label :name, t(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
          <% if sub_category.errors[:name].any? %>
            <label class="control-label"><i class="fa fa-times-circle-o"></i> <%= f.error :name %></label>
          <% end %>
        </div>
        <div class="form-group <%= "has-error" if sub_category.errors[:description].any? %>">
          <%= f.label :description, t(:description) %>
          <%= f.text_area :description, class: 'form-control' %>
          <% if sub_category.errors[:description].any? %>
            <label class="control-label"><i class="fa fa-times-circle-o"></i> <%= f.error :description %></label>
          <% end %>
        </div>
        <div class="form-group <%= "has-error" if sub_category.errors[:category_id].any? %>">
          <%= f.label :category %><br>
          <%= f.select(:category_id, Reports::Category.all.collect {|c| [ c.name, c.id ] }, { include_blank: true }, class: "form-control")  %>
          <% if sub_category.errors[:category_id].any? %>
            <label class="control-label"><i class="fa fa-times-circle-o"></i> <%= f.error :category_id %></label>
          <% end %>
        </div>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>

<%= display_button_bar(sub_category, [:admin]) %>
<% end %>
