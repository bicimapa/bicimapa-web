<section class="content-header">
<h1>
  <%= t(:users) %>
</h1>
</section>

<section class="content">
  <%= display_notice notice %>
	<div class="row">
		<div class="col-md-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Users</h3>

					<div class="box-tools">
						<%= paginate @users %>
					</div>
				</div><!-- /.box-header -->
				<div class="box-body no-padding">
					<table class="table">
						<thead>
							<tr>
                <th><%= t :full_name %></th>
                <th><%= t :joined_on %></th>
                <th><%= t :last_online_on %></th>
                <th><%= t :score %></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @users.each do |user| %>
								<tr>
									<td><%= user.last_name %> <%= user.first_name %></td>
                  <td><%= time_ago_in_words user.created_at %> <%= t :ago %></td>
                  <td><%= time_ago_in_words user.last_sign_in_at %> <%= t :ago %></td>
                  <td><%= user.score %> <%= t :points %></td>
									<td width="210px">

										<div class="btn-group">
											<%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_user_path(user), class: 'btn btn-default' %>
											<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_user_path(user), class: 'btn btn-default' %>
											<%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_user_path(user), method: :delete, data: { confirm: t('are_you_sure?') }, class: 'btn btn-danger' %>
                    </div>
                  </td>

								</tr>
							<% end %>
						</tbody>
					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->
</section>
