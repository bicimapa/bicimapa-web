<section class="content-header">
<h1>
  <%= t(:zones) %>
</h1>
</section>

<section class="content">
	<div class="row">

		<% @zones.each do |zone| %>
			<div class="col-md-4">
				<!-- Default box -->
				<div class="box">
					<div class="box-header">
						<h3 class="box-title"><%= zone.name %></h3>
					</div>
					<div class="box-body">
						<div class="map-container">
              <div class="map map-content" data-map-zone data-map-boundary="<%= polygon_to_s(zone.polygon) %>"/>
              </div>
						</div><!-- /.box-body -->
					</div><!-- /.box -->
				</div>
			</div>
		<% end %>


		<%= paginate @zones %>
	</div><!-- /.row -->
</section>
