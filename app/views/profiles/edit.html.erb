<%= simple_form_for @user, url: {:controller => 'profiles', :action => 'update'}, :method => :patch, :defaults => { :input_html => { :class => "form-control" } } do |f| %>
<div class="row">

  <div class="col-md-6">

    <!-- Default box -->
    <div class="box">
      <div class="box-header">
        <h3 class="box-title"><%= t :my_profile %></h3>
      </div>
      <div class="box-body">
        <table class="table" style="table-layout:fixed">
          <tbody>
            <tr>
              <th style="width: 25%"><%= t :last_name %></th>
              <td style="width: 75%"><%= f.input :last_name, label: false %></td>
            </tr>
            <tr>
              <th><%= t :first_name %></th>
              <td><%= f.input :first_name, label: false %></td>
            </tr>
            <tr>
              <th><%= t :email %></th>
              <td><%= f.input :email, label: false %></td>
            </tr>
            <tr>
              <th><%= t :receive_notifications %></th>
              <td><%= f.collection_radio_buttons :receive_notifications, [[true, t(:true)] ,[false, t(:false)]], :first, :last %></td>
            </tr>
            <tr>
              <th><%= t :photo %></th>
              <td><%= f.input :avatar, label: false %></td>
            </tr>
            <!--
            <tr>
              <th><%= t :locale %></th>
              <td><%= f.input :locale, label: false %></td>
            </tr>
            -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-body">
        <div class="pull-right">
          <%= link_to t(:back), :back, class: "btn btn-default" %>
          <%= f.submit t(:update), class: "btn btn-primary" %>
        </div>
        <div class="clearfix">
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

